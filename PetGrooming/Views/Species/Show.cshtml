@model PetGrooming.Models.ViewModels.ShowSpecies
@{
    ViewBag.Title = "Show";
}

<h2>Show Species</h2>
<div>Name : @Model.species.Name</div>
<a href="/Species/List">Back to list of species</a>
<h4>Pets of this species</h4>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>Species</th>
        <th>Weight</th>
        <th></th>
    </tr>

    <!--since the viewmodel has the list of pets we can can see all of the pets of this species type-->
    @foreach (var Pet in Model.species.Pets)
    {
        <tr>
            <td><a href="/Pet/Show/@Pet.PetID">@Pet.PetName</a></td>
            <td>@Pet.Species.Name</td>
            <td>@Pet.Weight</td>
            <td>
                <span><a href="/Pet/Update/@Pet.PetID">Update Pet</a></span> |
                <span><a href="/Pet/Delete/@Pet.PetID">Delete Pet</a></span>
            </td>
        </tr>
    }

</table>


